body
  // font-family "Helvetica Neue", "Segoe UI", Helvetica, Arial, sans-serif
  font-family Helvetica, sans-serif
  font-weight lighter
  font-size 16px
  background white
  color #2B2B2B
  height 100vh

div
  box-sizing border-box

.container
  width calc(100% - 20px)
  max-width 960px
  margin 0 auto
  position relative
  height 100vh
  min-height 700px

@keyframes appear {
  0% { opacity: 0 }
  100% { opacity: 1 }
}

@-moz-keyframes appear {
  0% { opacity: 0 }
  100% { opacity: 1 }
}

@-webkit-keyframes appear {
  0% { opacity: 0 }
  100% { opacity: 1 }
}

a
  text-decoration none
  color inherit

img
  pointer-events none

.hamburger
  display none
  width 100%
  position fixed
  top 0
  left 0
  padding 15px
  background white
  z-index 100
  img
    height 22px
    float right
    pointer-events all

.left-menu
  font-family Tahoma, Verdana, Segoe, sans-serif
  position absolute
  width 400px
  max-width 100%
  height calc( 100% - 100px )
  top 0
  left 0
  padding-top 100px
  padding-left 40px
  z-index 100
  p.menu
    font-size 12px
    margin 0 0 3px 0
    color #9A9A9A
    letter-spacing 2px
    &.active
      text-decoration underline
  ul
    font-size 14px
    margin 0
    font-weight bold
    letter-spacing 1px
    list-style none
    padding-left 0
    margin-bottom 30px
    li
      margin-bottom 6px
  .close
    position absolute
    top 15px
    right 15px
    height 22px
    pointer-events all
    display none

.appearing
  animation appear .6s linear 4s 1 normal forwards
  -moz-animation appear .6s linear 4s 1 normal forwards
  -webkit-animation appear .6s linear 4s 1 normal forwards
  opacity 0

.statement
  width 100%
  max-width 500px
  display block
  margin 0 auto
  text-align center
  position relative
  top 50%
  transform translateY(-50%)
  -moz-transform translateY(-50%)
  -webkit-transform translateY(-50%)
  p
    text-align left
    &#author
      text-align right
  img
    margin-top 10px
    width 100%

.content
  width 100%
  max-width 500px
  display block
  margin 0 auto
  padding-top 100px

// project.html
div.project
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  padding 50px 0
  min-height 100vh
  div.row
    margin-top 10px
  img, iframe
    margin-top 50px
    max-width 960px
    &.large
      width 100%
    &.small
      float left
      width calc( (100% - 50px) / 2)
      &:first-child
        margin-right 50px
    &.vert
      width 70%
      margin-left auto
      margin-right auto
      display block
  label
    padding-top 3px
    display block
  p.link
    margin 55px 0 0 0
  audio
    margin-top 20px
    width 670px
    max-width 100%
  .audio-centered
    margin-top 20px
    width 670px
    max-width 100%
    margin 0 auto

div.back-menu
  position fixed
  top 0
  left 0
  padding 15px 30px
  width 100%
  background white
  z-index 100
  font-family Tahoma, Verdana, Segoe, sans-serif
  font-size 12px
  margin 0
  color #9A9A9A
  letter-spacing 2px
  &.mobile-back-menu
    display none


// media queries
@media screen and (max-width: 1280px)
  body
    font-size 14px
  .statement, .content
    width 100%
    max-width 400px
    font-size 12px
  .left-menu
    padding-left 30px
    p.menu
      font-size 10px
    ul
      font-size 12px


@media screen and (min-width: 2600px)
  body
    font-size 18px
  .statement, .content
    width 100%
    max-width 600px
    font-size 16px
  .left-menu
    p.menu
      font-size 14px
    ul
      font-size 18px

// mobile
@media screen and (max-width: 500px)
  .container
    width calc(100% - 20px)
    min-height 0
    .content
      padding-top 50px
    .statement, .content
      width 100%
      max-width none
  .project
    img:first-child
      margin-top 0
  .left-menu
    display none
    top 0
    padding-top 100px
    animation none
    background-color rgba(255,255,255,0.93)
    width 100%
    height 100%
    &.visible
      display block
    .close
      display block
    p.menu
      margin 0 0 8px 0
    ul
      li
        margin-bottom 11px
  .hamburger
    display block
  div.back-menu
    padding 15px 10px
    &.mobile-back-menu
      display block
